    <div class="small-12 medium-12 large-12 columns">
      <h2><a href="index.html">Peeps & Hobbies</a></h2>
    </div>
  </div>
</header>
<div class="section-headline">
  <div class="row">
    <div class="small-12 medium-12 large-12 large-centered columns">
      <h1></h1>
      <h5></h5>
    </div>
  </div>
</div>

{{outlet}}

<div class="section-features-pricing section-bg-color1 ">
  <div class="row">
    <div class="small-12 medium-6 large-6 columns">
      <div class="feature-box">
        <h4>Line Chart</h4> {{ember-chart type='Line' data=lineData width=300 height=300}}
        <ul>
          <li>{{input value=lineValue1 type="number"}}</li>
          <li>{{input value=lineValue2 type="number"}}</li>
          <li>{{input value=lineValue2 type="number"}}</li>
        </ul>
      </div>
    </div>
    <div class="small-12 medium-6 large-6 columns">
      <div class="feature-box">
        <h4>Pie Chart</h4> {{ember-chart type='Pie' data=pieData width=300 height=300}}
        <ul>
          <li>{{input value=pieValue1 type="number"}}</li>
          <li>{{input value=pieValue2 type="number"}}</li>
          <li>{{input value=pieValue3 type="number"}}</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 large-6 columns">
      <div class="feature-box">
        <h3>Donut Chart</h3> {{ember-chart type='Doughnut' data=pieData width=300 height=300}}
      </div>
    </div>
    <div class="small-12 medium-6 large-6 columns">
      <div class="feature-box">
        <h3>Bar Chart</h3> {{ember-chart type='Bar' data=barData width=300 height=300}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 large-6 columns">
      <div class="feature-box">
        <h3>Radar Chart</h3> {{ember-chart type='radar' data=radarData width=300 height=300}}
      </div>
    </div>
    <div class="small-12 medium-6 large-6 columns">
      <div class="feature-box">
        <h3>Polar Area Chart</h3> {{ember-chart type='polar area' data=polarAreaData width=300 height=300}}
      </div>
    </div>
  </div>
</div>

<footer class="section-bg-color2">
